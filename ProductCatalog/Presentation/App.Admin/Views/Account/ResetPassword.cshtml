@model ResetPasswordModel
@{
    Layout = "~/Views/Shared/_LayoutAccount.cshtml";
    ViewBag.Title = "ForgotPassword";
}
<div class="page-content login-bg">
    <!-- Main content -->
    <div class="content-wrapper">
        <!-- Content area -->
        <div class="content d-flex justify-content-center align-items-center">
            <!-- Login form -->
            <form class="login-form" method="post" asp-action="ResetPassword" asp-controller="Account" id="frmAddEdit" onsubmit="ShowLoading();">
                <input type="hidden" asp-for="Code" />
                <div class="card mb-0">
                    <div class="card-body">
                        <div class="text-center mb-3">
                            <h5 class="mb-0">ForgotPassword</h5>
                        </div>
                        <div class="form-group form-group-feedback form-group-feedback-left">
                            <input asp-for="Email" class="form-control" placeholder="Email" />
                            <div class="form-control-feedback">
                                <i class="icon-user text-muted"></i>
                            </div>
                            <span asp-validation-for="Email"></span>
                        </div>
                        <div class="form-group form-group-feedback form-group-feedback-left">
                            <input type="password" asp-for="Password" class="form-control" placeholder="Password">
                            <div class="form-control-feedback">
                                <i class="icon-lock2 text-muted"></i>
                            </div>
                            <span asp-validation-for="Password"></span>
                        </div>
                        <div class="form-group form-group-feedback form-group-feedback-left">
                            <input type="password" asp-for="ConfirmPassword" class="form-control" placeholder="ConfirmPassword">
                            <div class="form-control-feedback">
                                <i class="icon-lock2 text-muted"></i>
                            </div>
                            <span asp-validation-for="ConfirmPassword"></span>
                        </div>
                        <div class="form-group">
                            <button type="submit" class="btn btn-danger">Change <i class="icon-circle-left2 mr-2"></i></button>
                        </div>
                    </div>
                </div>
            </form>
            <!-- /login form -->
        </div>
        <!-- /content area -->
    </div>
    <!-- /main content -->
</div>